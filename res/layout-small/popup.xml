<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="10dip"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#D0000000"
    android:id="@+id/popup_element"
    >

  <ImageButton
	        android:id="@+id/xButton"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
          	android:background="@null"
	        android:adjustViewBounds="true"  
	    	android:maxWidth="20dp"    
	    	android:scaleType="fitCenter" 
	        android:layout_marginLeft="30dp"
	        android:src="@drawable/x" />
  
   <TextView
        android:id="@+id/popupHumidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:text="@string/humidity1" />
 
	     <TextView
	         android:id="@+id/popupDescription"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/popupHumidity"
	        android:textColor="#FFFFFF"
	        android:textSize="15dp"
	        android:text="@string/description1"
	    />
      
	      <TextView
	         android:id="@+id/popupExamples"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/popupDescription"
	        android:textColor="#FFFFFF"
	        android:textSize="13dp"
	        android:text="@string/examples1"
	    />
</RelativeLayout>